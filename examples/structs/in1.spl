class ArrayInt
{
    int size;
    int[] elems;
}

class Graph
{
    int nVertex;
    ArrayInt[] neighbours;
}

bool areNeighbours(Graph g, int v1, int v2)
{
    if (v1 < 0 || v2 < 0 || v1 >= g.nVertex || v2 >= g.nVertex)
        return false;

    ArrayInt ns = g.neighbours[v1];
    int i = 0;
    while (i < ns.size)
        if (ns.elems[i] == v2)
            return true;

    return false;
}

int main()
{
    Graph g = new Graph;
    bool b = areNeighbours(g, 1, 2);
    return 0;
}
